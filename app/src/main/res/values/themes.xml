<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitraptorsTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fullDarkColor</item>
        <item name="colorPrimaryVariant">@color/fullDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightDarkColor</item>
        <item name="colorSecondaryVariant">@color/fullDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BitraptorsTest.Splash" parent="Theme.BitraptorsTest">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">100dp</item>
        <item name="cornerSizeTopLeft">100dp</item>
    </style>

    <style name="CollapsedCovidTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedCovidTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CellTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>